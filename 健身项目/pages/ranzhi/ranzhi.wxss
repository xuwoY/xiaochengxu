/* pages/ranzhi/ranzhi.wxss */
.nav{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  margin-bottom: 100rpx; 
}
.tianjai{
  width: 100%;
  height: 100rpx;
  display: flex;
  background: black;
  color: white;
  position: fixed;
  bottom: 0;
}
.tianjai view{
  width: 50%;
  height: 84rpx;
  margin: 8rpx 0;
  text-align: center;
  line-height: 84rpx;
}
.tianjai view:first-child{
  border-right: 1rpx solid white; 
}
.kaishi{
  width: 100%;
  height: 450rpx;
  color: white;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.ming{
  margin: 50rpx 0; 
  font-size: 50rpx;
}
.heng{
  display: flex;
}
.heng view{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 210rpx;
}
.heng view text:last-child{
  font-size: 30rpx;
}
.heng view text:first-child{
  font-size: 50rpx;
}
.heng view:nth-child(2){
  border-left:1rpx solid white; 
  border-right:1rpx solid white; 
}
.yuan{
  width: 130rpx;
  height: 130rpx;
  background: greenyellow;
  border-radius: 100rpx;
  text-align: center;
  line-height: 130rpx;
  color: black;
  margin-top: 27rpx; 
}
.shi{
  font-size: 50rpx;
  margin: 20rpx 0;
}
.he{
  font-size: 30rpx;
}
.tou{
  width: 100%;
  height: 450rpx;
  margin: 20rpx 0;
  color: white;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}
.tou text{
  width: 80%;
  margin: auto 0;
}
.na{
  font-size: 50rpx;
  margin: 10rpx 0; 
}
.xiang{
  width: 100%;
  height: 100%;
  background: rgb(219, 218, 218);
  color: rgb(112, 109, 109);
}
.xiang view{
  width: 100%;
  height: 200rpx;
  color: black;
  margin-top: 5rpx;
  display: flex;
  background: white;
  line-height: 200rpx;
  font-size: 30rpx;
}
.xiang view image{
  width: 150rpx;
  height: 200rpx;
}
.xiang view text{
  margin-left: 50rpx
}
.re{
  font-size: 30rpx;
  margin-left: 30rpx;
}